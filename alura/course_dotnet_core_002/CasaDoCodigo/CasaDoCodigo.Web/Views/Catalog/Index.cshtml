@model CasaDoCodigo.Web.ViewModels.Catalog.IndexCatalogViewModel

@{
    ViewData["Title"] = "Catalog";
}

<ul>
    @foreach (var item in Model.Products)
    {
        <li>
            <span>@item.Name</span>
            <money>@item.Price</money>
            <a asp-controller="AddProductToShoppingCart" asp-action="Store" asp-route-id="@item.Id">Buy</a>
        </li>
    }
</ul>
