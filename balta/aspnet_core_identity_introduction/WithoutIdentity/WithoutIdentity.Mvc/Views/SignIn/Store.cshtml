@model WithoutIdentity.Mvc.ViewModels.SignIn.SignInStoreViewModel

@{
    ViewData["Title"] = "Sign In";
}

<form asp-controller="SignIn" asp-action="Store" method="post" class="col-12 col-md-6 offset-md-3 mt-5">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Remember" class="form-check-input" />
        <label asp-for="Remember" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Sign In</button>

    <div asp-validation-summary="All" class="mt-3"></div>
</form>
